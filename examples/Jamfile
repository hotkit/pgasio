include $(TOP)/../fost-base/fost.jam ;
import path ;
import utility ;


lib boost_coroutine : : <name>boost_coroutine ;
lib boost_system : : <name>boost_system ;


loc = examples/ ;

rule sample ( name ) {
    exe $(name)
        :
            boost_coroutine
            boost_system
            $(name).cpp
        ;
}

for local cpp in [ path.glob $(loc) : *.cpp ] {
    sample [ utility.basename $(cpp) ] ;
}

